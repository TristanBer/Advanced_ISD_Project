/* style for the  light mode (which is on by default) */
body {
    background-color: white;
    color: black;
}

/* Dark mode (which can be activated) */
body.dark-mode {
    background-color: black;
    color: white;
}

/* Button styles */
#dark-mode-toggle {
    position: fixed;
    top: 10px;
    right: 10px;
    padding: 10px;
    cursor: pointer;
}
